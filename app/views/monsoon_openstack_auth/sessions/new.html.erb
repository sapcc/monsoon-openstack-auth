<div class="login-form">
  <h3>Login</h3>
  <% if @error%>
    <div class="error"><%= @error %></div>
  <% end %>  

  <%= form_tag(sessions_path) do %>
    <p>
      <%= label_tag 'Name' %>
      <%= text_field_tag :username, @username %>
    </p>
    <p>
      <%= label_tag 'Password' %>
      <%= password_field_tag :password, @password %>
    </p>
    <p>
      <%= submit_tag 'Login'  %>
    </p>  
  <% end %>    
</div>